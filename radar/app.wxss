/**app.wxss**/
@import "./res/styles/tianyi.wxss";
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.index_login_div {
    display: block;
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 2;
    left:0;
    top: 0;
    background: #fff;
}

.index_login_div>view {
    display: block;
    position: absolute;
    width: 80pt !important;
    height: 100pt !important;
    padding: 0;
    top: 40%;
    left: 50%;
    margin-top: -50pt !important;
    margin-left: -40pt !important;
}
.index_login_div>view>button {
    display: block;
    box-sizing: border-box;
    border-radius: 100%;
    overflow: hidden;
    width: 80pt !important;
    height: 80pt !important;
    padding: 0;
}
.index_login_div>view>button:active{
    opacity: 0.7;
}
.index_login_div>view>button>image {
    display: block;
    width: 80pt !important;
    height: 80pt !important;
    border-radius: 100%;
}
.index_login_div>view>label {
    display: block;
    padding: 10pt 0;
    color:#333;
}


@keyframes showTypeAni {
    0% {
        transform: scale(0.7, 0.7);
        opacity: 0.2;
    }
    70% {
        transform: scale(1,1);
        opacity: 0.7;
    }
    80% {
        transform: scale(1.1,1.1);
        opacity:0.9;
    }
    100% {
        transform: scale(1,1);
        opacity: 1;
    }
}

.animationShowType {
    animation: showTypeAni 0.4s ease-in;
}

@keyframes maskShowAni {
    from{
        opacity: 0
    }
    to{
        opacity: 1;
    }
}
.animationShowMask {
    animation: maskShowAni 0.6s ease-in;
}
