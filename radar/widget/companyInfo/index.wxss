.CompanyInfo {
    display: block;
    padding: 10pt 15pt;
    font-size: 10pt;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.CompanyInfo>label {
    color: #4a90e2;
}
.CompanyInfo>text {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.CompanyList {
    display: block;
    position: fixed;
    z-index: 100;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
    background: rgb(10,10,10, 0.2);
}
.CompanyList>view {
    display: block;
    width: 80vw;
    max-height: 70vh;
    background: #fff;
    margin: 0 auto;
    margin-top: 15vh;
    padding: 10pt 5pt;
    border-radius: 5pt;
    box-sizing: border-box;
}
.CompanyList>view>scroll-view {
    height: 100%;
}
.CompanyList>view>scroll-view label {
    display: block;
    min-height: 26pt;
    line-height: 26pt;
    color: #a5a5a5;
    padding: 2pt 5pt;
}
.CompanyList>view>scroll-view .active {
    background: #4a90e2;
    color: #fff;
}


@keyframes showTypeAni {
    0% {
        transform: scale(0.7, 0.7);
        opacity: 0.2;
    }
    70% {
        transform: scale(1,1);
        opacity: 0.7;
    }
    80% {
        transform: scale(1.1,1.1);
        opacity:0.9;
    }
    100% {
        transform: scale(1,1);
        opacity: 1;
    }
}

.animationShowType {
    animation: showTypeAni 0.4s ease-in;
}

@keyframes maskShowAni {
    from{
        opacity: 0
    }
    to{
        opacity: 1;
    }
}
.animationShowMask {
    animation: maskShowAni 0.6s ease-in;
}

